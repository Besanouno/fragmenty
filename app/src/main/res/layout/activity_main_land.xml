<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.edu.agh.fragments.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <fragment android:name="pl.edu.agh.fragments.layout.TitlesFragment" android:id="@+id/list"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            />

        <fragment android:name="pl.edu.agh.fragments.layout.ArticleFragment" android:id="@+id/article"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
